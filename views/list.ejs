<%- include('header') -%>

    <div class="box">
        <% for(let i=0; i<newItem.length; i++) { %>
            <div class="item">
                <input type="checkbox">
                <p><%= newItem[i] %></p>
            </div>
        <% } %>
    </div>

    <div class="box">
        <form action="/" method="post">
            <input type="text" name="newItem" placeholder="Add New Item" autocomplete="off">
            <button type="submit">+</button>
        </form>
    </div>

<%- include('footer') -%>